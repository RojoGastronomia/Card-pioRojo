# Database
# For local development using Railway CLI:
# 1. Run 'railway connect Postgres' in your terminal.
# 2. Use the local tunnel URL provided (usually localhost:5432 or similar).
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/railway

# Default local PostgreSQL setup (if not using Railway)
DATABASE_URL=postgresql://user:password@localhost:5432/sitecard

# For production on Railway, this will be set automatically
# DATABASE_URL=postgresql://postgres:********@tramway.proxy.rlwy.net:53462/railway

# Server
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Session
SESSION_SECRET=your_session_secret_here

# Client
VITE_API_URL=http://localhost:5000/api

# Vercel
VERCEL_URL=your_vercel_url_here
VERCEL_ENV=production 